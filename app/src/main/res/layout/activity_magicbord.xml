<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".magicbord">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_top"
        android:background="@color/purple_500"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ম্যাজিক বোর্ড"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:id="@+id/toolbar_title" />

    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="515sp"
        >
        <include
            layout="@layout/view_display"
            android:layout_width="match_parent"
            android:layout_height="515sp"
            />
    </LinearLayout>



    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="150sp"
        android:layout_marginTop="2sp"
        android:layout_weight="1"
        android:background="@drawable/tools_design"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="0dp">

        <Button
            android:layout_width="68sp"
            android:layout_height="68sp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/printt"
            android:onClick="pencil" />

        <Button
            android:layout_width="68sp"
            android:layout_height="68sp"
            android:layout_marginLeft="15sp"
            android:background="@drawable/eraser"
            android:onClick="eraser" />

        <Button
            android:layout_width="45sp"
            android:layout_height="45sp"
            android:layout_marginLeft="15sp"
            android:background="@drawable/button_design"
            android:backgroundTint="@color/Red"
            android:onClick="redcolor" />

        <Button
            android:layout_width="45sp"
            android:layout_height="45sp"
            android:layout_marginLeft="15sp"
            android:background="@drawable/button_design"
            android:backgroundTint="@color/Blue"
            android:onClick="bluecolor" />

        <Button
            android:layout_width="45sp"
            android:layout_height="45sp"
            android:layout_marginLeft="15sp"
            android:background="@drawable/button_design"
            android:backgroundTint="@color/Green"
            android:onClick="greencolor" />


    </LinearLayout>


</LinearLayout>
